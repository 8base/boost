{
  "name": "@8base/boost",
  "version": "0.2.0",
  "author": "8base",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "dev": "NODE_ENV=development rollup -c -w",
    "storybook": "start-storybook -p 9001 -c storybook",
    "sb": "yarn storybook",
    "push-tags": "git push --follow-tags",
    "test": "jest --coverage",
    "eslint": "eslint --ext .jsx,.js --max-warnings=0 src/ storybook/ flow-typed/",
    "flow": "flow",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "yarn changelog && git add CHANGELOG.md"
  },
  "peerDependencies": {
    "react": "16.3.0",
    "react-dom": "16.3.0"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.4.1",
    "@storybook/addons": "3.4.1",
    "@storybook/react": "^3.4.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-flow-react-proptypes": "^23.0.0",
    "babel-plugin-jsx-control-statements": "^3.2.8",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "^6.26.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "4.1.1",
    "eslint-config-react-app": "2.1.0",
    "eslint-plugin-flowtype": "2.34.1",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.69.0",
    "jest": "^22.4.3",
    "jest-emotion": "^9.0.0",
    "lodash": "^4.17.5",
    "react": "16",
    "react-dom": "16",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.3.1",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "dependencies": {
    "conventional-changelog-cli": "^1.3.22",
    "emotion": "^9.1.1",
    "emotion-theming": "^9.0.0",
    "enzyme": "^3.3.0",
    "final-form": "^4.6.1",
    "prop-types": "^15.6.1",
    "react-emotion": "^9.1.1",
    "react-final-form": "^3.4.0",
    "react-onclickoutside": "^6.7.1",
    "react-popper": "^0.10.1",
    "react-portal": "^4.1.5",
    "recompose": "^0.27.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/storybook"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.stories.js",
      "!src/**/*.index.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
