{
  "name": "@8base/boost",
  "version": "0.4.15",
  "author": "8base",
  "license": "MIT",
  "main": "es/index.js",
  "module": "es/index.js",
  "scripts": {
    "build": "NODE_ENV=production babel src -d es --ignore __tests__",
    "watch": "NODE_ENV=development babel src -d es --watch --ignore __tests__",
    "build-storybook": "build-storybook -c storybook -o .out",
    "deploy-storybook": "storybook-to-ghpages",
    "storybook": "start-storybook -p 9001 -c storybook",
    "test": "jest",
    "eslint": "eslint --ext .jsx,.js --max-warnings=0 src/ storybook/",
    "flow": "flow",
    "checks": "yarn eslint && yarn flow && yarn test",
    "changelog-overwrite": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "yarn changelog && git add CHANGELOG.md",
    "commit": "git-cz",
    "push-tags": "git push --follow-tags && yarn deploy-storybook"
  },
  "peerDependencies": {
    "react": "^16.3",
    "react-dom": "^16.3",
    "react-emotion": "^9.1"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.4.4",
    "@storybook/addon-storyshots": "^3.4.1",
    "@storybook/addons": "3.4.1",
    "@storybook/react": "^3.4.1",
    "@storybook/storybook-deployer": "^2.3.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-flow-react-proptypes": "^23.0.0",
    "babel-plugin-inline-react-svg": "^0.5.2",
    "babel-plugin-jsx-control-statements": "^3.2.8",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "^6.26.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.22",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^5.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "4.1.1",
    "eslint-config-react-app": "2.1.0",
    "eslint-plugin-flowtype": "2.34.1",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "0.66",
    "jest": "^22.4.3",
    "jest-emotion": "^9.0.0",
    "lodash": "^4.17.5",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-emotion": "^9.1.3",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.3.1"
  },
  "dependencies": {
    "emotion": "^9.1.1",
    "emotion-theming": "^9.1.2",
    "prop-types": "^15.6.1",
    "react-input-mask": "^2.0.1",
    "react-onclickoutside": "^6.7.1",
    "react-popper": "^0.10.1",
    "react-portal": "^4.1.5",
    "recompose": "^0.27.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/storybook"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.stories.js",
      "!src/**/*.index.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
